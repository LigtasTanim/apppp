<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Transfer Association"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="58dp"
        android:background="@drawable/category"
        android:padding="8dp">

        <Spinner
            android:id="@+id/reasonSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_dropdown_arrow"
            android:hint="Reason for Transfer"
            android:padding="8dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newAssociationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reasonLayout"
        android:layout_marginTop="16dp"
        android:background="@drawable/category"
        android:padding="8dp">

        <Spinner
            android:id="@+id/associationSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Select New Association"
            android:drawableEnd="@drawable/ic_dropdown_arrow"
            android:padding="8dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/transferButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newAssociationLayout"
        android:layout_marginTop="32dp"
        android:background="@drawable/getstartedbtn"
        android:padding="12dp"
        android:text="Submit Transfer Request"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transferButton"
        android:layout_marginTop="16dp"
        android:text="Note: Your transfer request will need to be approved by the new Farmers association officer"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

</RelativeLayout>