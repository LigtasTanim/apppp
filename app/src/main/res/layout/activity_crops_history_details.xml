<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/category"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/farmingActivityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farming Activity"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/startDateTextView"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/harvestingRentAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Harvesting Rent Amount"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/harvestingGasMoneyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Harvesting Gas Money"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/fertilizerCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Fertilizer Cost"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/farmSizeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Farm Size"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/wateringGasMoneyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Watering Gas Money"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/wateringRentAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Watering Rent Amount"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/black" />



        <TextView
            android:id="@+id/totalExpensesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watering Rent Amount"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>




    </LinearLayout>
</LinearLayout>
