<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".JoinAssociation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".JoinAssociation">

        <Spinner
            android:id="@+id/spinnerAssociation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/category"
            android:padding="18dp"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2x2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:text="Upload your 2x2 picture here (Click the image below)"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAssociation"
            tools:layout_editor_absoluteX="-11dp" />

    <ImageView
        android:id="@+id/imageView2x2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2x2"
        app:layout_constraintBottom_toTopOf="@+id/textViewLandTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_upload"/>

    <TextView
        android:id="@+id/textViewLandTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="10dp"
        android:text="Upload land title (Click the image below)"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageView2x2"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageViewLandTitle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLandTitle"
        app:layout_constraintBottom_toTopOf="@+id/textViewLandTax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_upload"/>

    <TextView
        android:id="@+id/textViewLandTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Upload land tax (Click the image below)"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLandTitle"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/imageViewLandTax"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLandTax"
        app:layout_constraintBottom_toTopOf="@+id/textViewCertification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_upload"/>

    <TextView
        android:id="@+id/textViewCertification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Upload barangay certification that the land belongs to them (Click the image below)"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLandTax"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageViewCertification"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCertification"
        app:layout_constraintBottom_toTopOf="@+id/textViewValitID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_upload"/>

    <TextView
        android:id="@+id/textViewValitID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Upload Valid ID (Click the image below)"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCertification"
        tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewValidID"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/textView2x2"
            android:clickable="true"
            android:contentDescription="Upload image view"
            android:focusable="true"
            android:src="@drawable/ic_upload"
            app:layout_constraintTop_toBottomOf="@+id/textViewValitID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textViewReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:text="Farmers Association Receipt (Click the image below)"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/imageViewValidID"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/imageViewReceipt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/textView2x2"
            android:clickable="true"
            android:contentDescription="Upload image view"
            android:focusable="true"
            android:src="@drawable/ic_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewReceipt" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="@drawable/getstartedbtn"
            android:padding="10dp"
            android:text="Submit Requirements"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewReceipt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>