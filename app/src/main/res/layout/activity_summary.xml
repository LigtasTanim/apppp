<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgimg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="50dp"
        android:background="@drawable/fillbg">

        <!-- Watering Equipment Radio Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have equipment for watering?"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <RadioGroup
            android:id="@+id/wateringEquipmentRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/wateringYesRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/wateringNoRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>
        </RadioGroup>

        <EditText
            android:id="@+id/wateringGasMoneyEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/category"
            android:hint="Enter Watering Gas Money"
            android:inputType="numberDecimal"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/wateringRentAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/category"
            android:hint="Enter Watering Rent Amount"
            android:inputType="numberDecimal"/>

        <!-- Harvesting Equipment Radio Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have equipment for harvesting?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/harvestingEquipmentRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/harvestingYesRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/harvestingNoRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"/>
        </RadioGroup>

        <EditText
            android:id="@+id/harvestingGasMoneyEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/category"
            android:hint="Enter Harvesting Gas Money"
            android:inputType="numberDecimal"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/harvestingRentAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/category"
            android:hint="Enter Harvesting Rent Amount"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/fertilizerCostEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/category"
            android:hint="Enter Fertilizer Cost"
            android:inputType="numberDecimal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/totalExpensesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Total Amount: 0.00"/>

        <TextView
            android:id="@+id/expectedHarvestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Expected Harvest: 0.00"/>

        <Button
            android:id="@+id/completedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Complete"
            android:clickable="true"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</LinearLayout>
