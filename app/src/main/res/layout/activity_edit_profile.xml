<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:padding="15dp"
            android:background="@drawable/graycard"
            android:layout_below="@+id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSelectImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="12dp"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFirstName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="First Name"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvMiddleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextFirstName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Middle Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMiddleName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="Middle Name"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMiddleName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLastName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="Last Name"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvExtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextLastName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Extension Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextExtensionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExtName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="Extension Name"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextExtensionName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="Address"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tvBday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextAddress"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Date of Birth(YYYY-MM-DD)"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvBday"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:hint="YYYY-MM-DD"
            android:focusable="false"
            android:clickable="true"
            android:padding="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextDateOfBirth"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Place of Birth"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPlaceOfBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvPlace"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:ems="10"
            android:hint="Place of Birth"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvReligion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPlaceOfBirth"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Religion"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextReligion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvReligion"
            android:layout_marginStart="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_combined_bg"
            android:ems="10"
            android:hint="Religion"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextReligion"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Civil Status"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCivilStatus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvCV"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="8dp"
            android:translationZ="8dp"
            android:background="@drawable/edittext_combined_bg"
            android:ems="10"
            android:hint="Civil Status"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvFA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextCivilStatus"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="Farming Activity"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/farmingActivityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFA"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/edittext_combined_bg"
            android:elevation="8dp"
            android:translationZ="8dp">

            <CheckBox
                android:id="@+id/checkBoxAmpalaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ampalaya"/>

            <CheckBox
                android:id="@+id/checkBoxPalay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palay"/>

            <CheckBox
                android:id="@+id/checkBoxMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mais"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_below="@+id/farmingActivityLayout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/getstartedbtn"
            android:text="Save"
            android:textSize="17dp" />

    </RelativeLayout>
</ScrollView>
